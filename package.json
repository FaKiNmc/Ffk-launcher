{
    "name": "fk-launcher",
    "version": "1.3.9",
    "private": true,
    "description": "Unified Game Launcher for Windows",
    "author": "Isma",
    "main": "electron/main.js",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:build": "vite build && electron-builder --win",
        "preview": "vite preview"
    },
    "build": {
        "appId": "com.isar.fklauncher",
        "productName": "FKLauncher",
        "icon": "build/icon.ico",
        "directories": {
            "output": "dist_electron"
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "win": {
            "target": "portable",
            "icon": "build/icon.ico"
        }
    },
    "dependencies": {
        "react": "^19.2.0",
        "react-dom": "^19.2.0"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^5.1.1",
        "concurrently": "^9.0.0",
        "cross-env": "^7.0.3",
        "electron": "^33.0.0",
        "electron-builder": "^25.0.0",
        "electron-packager": "^17.1.2",
        "jimp": "^1.6.0",
        "png-to-ico": "^3.0.1",
        "vite": "^7.2.4",
        "wait-on": "^8.0.0"
    }
}