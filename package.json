{
    "name": "fk-launcher",
    "version": "1.6.0",
    "private": true,
    "description": "FKLauncher",
    "author": "Isma",
    "main": "electron/main.js",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:build": "npm run build && node scripts/obfuscate-main.js && electron-builder --win",
        "preview": "vite preview"
    },
    "build": {
        "appId": "com.isar.fklauncher",
        "productName": "FKLauncher",
        "icon": "build/icon.ico",
        "publish": [
            {
                "provider": "github",
                "owner": "FaKiNmc",
                "repo": "Ffk-launcher"
            }
        ],
        "directories": {
            "output": "dist_electron"
        },
        "files": [
            "dist/**/*",
            {
                "from": "dist-electron-pkg/electron",
                "to": "electron",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "build/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "FKLauncher",
            "artifactName": "${productName}-Setup-${version}.${ext}"
        }
    },
    "dependencies": {
        "electron-updater": "^6.7.3",
        "react": "^19.2.0",
        "react-dom": "^19.2.0"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^5.1.1",
        "concurrently": "^9.0.0",
        "cross-env": "^7.0.3",
        "electron": "^33.0.0",
        "electron-builder": "^25.0.0",
        "electron-packager": "^17.1.2",
        "gulp": "^5.0.1",
        "gulp-javascript-obfuscator": "^1.1.6",
        "javascript-obfuscator": "^5.1.0",
        "jimp": "^1.6.0",
        "png-to-ico": "^3.0.1",
        "vite": "^7.2.4",
        "vite-plugin-javascript-obfuscator": "^3.1.0",
        "wait-on": "^8.0.0"
    }
}